{
  "$schema": "https://raw.githubusercontent.com/tauri-apps/tauri/dev/crates/tauri-cli/schema.json",
  "productName": "Prosty Planer",
  "version": "0.1.5",
  "identifier": "pl.prostyprzetarg.planer",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1421",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Prosty Planer",
        "width": 1200,
        "height": 800,
        "minWidth": 900,
        "minHeight": 600,
        "resizable": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "plugins": {
    "deep-link": {
      "desktop": {
        "schemes": ["prostyplaner"]
      }
    },
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDI5QjQ4MjY4MzM2MTI1OTcKUldTWEpXRXphSUswS1h5MVdxcjRaa1E2b3pud25UejArdEd0dXBlOTR6ZGcwaFljdTNWemw3ZEMK",
      "endpoints": [
        "https://github.com/maciejsobolewski3-web/prosty-planer/releases/latest/download/latest.json"
      ],
      "dialog": true
    }
  },
  "bundle": {
    "active": true,
    "targets": ["nsis", "dmg"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "nsis": {
        "installMode": "both",
        "languages": ["Polish", "English"],
        "displayLanguageSelector": false
      }
    },
    "createUpdaterArtifacts": true
  }
}
